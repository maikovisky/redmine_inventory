<% html_title t(:inventory_label) %>
<div class="contextual">
	<%= link_to t(:inventory_new_locate),  new_inventory_locate_path, :class => "icon icon-add" %>
	<%= link_to t(:inventory_list), "inventory", :class => "icon icon-report" %>
	<%= link_to t(:inventory_list_types),  "inventory_types", :class => "icon icon-report" %>
	<%= link_to t(:inventory_list_brand),  "inventory_brands", :class => "icon icon-report" %>
</div>
<h1><%= l(:h1_inventory_locate) %></h1>

<% if @inventory_locate.empty? %>
	<p class="nodata">No data to display</p>
<% else %>
<table class="list" width="25%">
<thead>
	<tr>
		<th>Id</th>
		<th><%=t :field_name %></th>
		<th><%=t :field_city %></th>
		<th>&nbsp;</th>
	</tr>
</thead>
<tbody>
	<% @inventory_locate.each do |e| %>
		<tr>
			<td align="center" width="20px"><%= e.id %></td>
			<td><%= e.name%></td>
			<td><%= e.city%></td>
			<td>
				<%= link_to "", edit_inventory_locate_path(e), :class => "icon icon-edit" %>
				<%= link_to "", inventory_locate_path(e), :confirm=> "Are you sure?", :class => "icon icon-del", :method => :delete %>
			</td>
		</tr>
	<% end %>	
</tbody>
</table>
<% end %>


