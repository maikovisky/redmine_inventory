<% html_title t(:inventory_label) %>
<div class="contextual">
	<%= link_to t(:inventory_new_type),  new_inventory_type_path, :class => "icon icon-add" %>
	<%= link_to t(:inventory_list), inventories_path, :class => "icon icon-report" %>
	<%= link_to t(:inventory_brand),  inventory_brands_path, :class => "icon icon-report" %>
	<%= link_to t(:inventory_locate), inventory_locates_path, :class => "icon icon-report" %>
</div>

<h1><%= l(:h1_inventory_type_edit) %></h1>

<%= form_for(@inventory_type) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= submit_tag l(:button_save) %>
<% end %>
