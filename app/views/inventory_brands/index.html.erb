<% html_title t(:inventory_label) %>
<div class="contextual">
	<%= link_to t(:inventory_new_brand),  new_inventory_brand_path, :class => "icon icon-add" %>
	<%= link_to t(:inventory_list), inventories_path, :class => "icon icon-report" %>
	<%= link_to t(:inventory_list_type), inventory_types_path, :class => "icon icon-report" %>
	<%= link_to t(:inventory_list_locate), inventory_locates_path, :class => "icon icon-report" %>
</div>
<h1><%= l(:h1_inventory_brand) %></h1>

<% if @inventory_brand.empty? %>
	<p class="nodata">No data to display</p>
<% else %>
<table class="list" width="25%">
<thead>
	<tr>
		<th>Id</th>
		<th><%=t :field_name %></th>
		<th>&nbsp;</th>
	</tr>
</thead>
<tbody>
	<% @inventory_brand.each do |e| %>
		<tr>
			<td align="center" width="20px"><%= e.id %></td>
			<td><%= e.name%></td>
			<td>
				<%= link_to "", edit_inventory_brand_path(e), :class => "icon icon-edit" %>
				<%= link_to "", inventory_brand_path(e), :confirm=> "Are you sure?", :class => "icon icon-del", :method => :delete %>
			</td>
		</tr>
	<% end %>	
</tbody>
</table>
<% end %>


